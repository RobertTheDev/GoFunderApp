{
  "name": "gofunder-server",
  "version": "1.0.0",
  "main": "app.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "format:check": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "prepare": "husky install",
    "build": "swc src --out-dir dist",
    "devo": "nodemon --watch src --ext ts",
    "devi": "nodemon --watch src --ext ts --exec 'npm run build && npm start'",
    "start": "node dist/app.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@sendgrid/mail": "8.1.0",
    "argon2": "0.31.2",
    "axios": "1.6.5",
    "compression": "^1.7.4",
    "connect-redis": "7.1.0",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "3.1.1",
    "express-rate-limit": "7.1.5",
    "express-session": "1.17.3",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "nanoid": "5.0.4",
    "node-2fa": "2.0.3",
    "qrcode": "1.5.3",
    "redis": "^4.6.12",
    "slugify": "1.6.6",
    "winston": "3.11.0",
    "winston-daily-rotate-file": "4.7.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.102",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "1.17.10",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.11",
    "@types/node": "^20.10.7",
    "@types/qrcode": "1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "chokidar": "3.5.3",
    "concurrently": "8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "nodemon": "3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "ts-node": "10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
